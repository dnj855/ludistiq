<div>
  <%= form.label method, label, class: "block text-sm font-medium leading-6 text-slate-900" %>
  <div class="mt-2">
    <%= form.text_field method, **options.merge(class: field_classes) %>
  </div>

  <%# NOUVEAU : On affiche le message d'erreur s'il existe %>
  <% if has_errors? %>
    <p class="mt-2 text-sm text-rose-600"><%= error_message %></p>
  <% end %>
</div>