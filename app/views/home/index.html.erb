<!-- Hero Section Principale -->
<div class="relative overflow-hidden bg-white">
  <div class="pt-16 pb-24 sm:pt-24 sm:pb-32 lg:pt-40 lg:pb-48">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="lg:grid lg:grid-cols-12 lg:gap-8">
        <!-- Contenu principal gauche -->
        <div class="sm:text-center md:mx-auto md:max-w-2xl lg:col-span-6 lg:text-left lg:flex lg:items-center">
          <div>
            <!-- Badge de statut -->
            <div class="mb-8">
              <span class="inline-flex items-center gap-x-1.5 rounded-full bg-indigo-100 px-3 py-1 text-sm font-medium text-indigo-800">
                <svg class="h-1.5 w-1.5 fill-indigo-500" viewBox="0 0 6 6" aria-hidden="true">
                  <circle cx="3" cy="3" r="3" />
                </svg>
                MVP en développement
              </span>
            </div>
            
            <!-- Titre principal -->
            <h1 class="text-4xl font-bold tracking-tight text-slate-900 sm:text-6xl">
              Le système d'exploitation pour les 
              <span class="text-indigo-600">festivals de jeux</span>
            </h1>
            
            <!-- Sous-titre -->
            <p class="mt-6 text-xl text-slate-600">
              Ludistiq centralise, simplifie et professionnalise l'organisation des festivals de jeux de société. 
              Fini les tableurs éparpillés et les interruptions constantes.
            </p>
            
            <!-- Actions CTA -->
            <div class="mt-10 flex gap-4 sm:justify-center lg:justify-start">
              <% if user_signed_in? %>
                <% if current_user.admin? %>
                  <%= link_to events_path, class: "inline-flex items-center justify-center rounded-md px-6 py-3 text-base font-semibold text-white bg-indigo-600 shadow-sm transition-colors hover:bg-indigo-700 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" do %>
                    Gérer mes événements
                  <% end %>
                <% else %>
                  <%= link_to root_path, class: "inline-flex items-center justify-center rounded-md px-6 py-3 text-base font-semibold text-white bg-indigo-600 shadow-sm transition-colors hover:bg-indigo-700 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" do %>
                    Accéder à mon planning
                  <% end %>
                <% end %>
              <% else %>
                <%= link_to new_user_registration_path, class: "inline-flex items-center justify-center rounded-md px-6 py-3 text-base font-semibold text-white bg-indigo-600 shadow-sm transition-colors hover:bg-indigo-700 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" do %>
                  Commencer gratuitement
                <% end %>
