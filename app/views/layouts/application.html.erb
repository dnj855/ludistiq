<!DOCTYPE html>
<html>
  <head>
    <title>Ludistiq</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

<body class="min-h-screen bg-gray-50">
  <!-- Navigation moderne -->
  <header class="bg-white shadow-sm border-b border-gray-200">
    <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center h-16">
        <!-- Logo/Brand -->
        <div class="flex-shrink-0">
          <%= link_to root_path, class: "text-2xl font-bold text-gray-900 hover:text-blue-600 transition-colors" do %>
            Ludistiq
          <% end %>
        </div>
        
        <!-- Navigation principale -->
        <div class="hidden md:block">
          <div class="ml-10 flex items-baseline space-x-4">
            <%= link_to "Accueil", root_path, class: "text-gray-600 hover:text-gray-900 px-3 py-2 rounded-md text-sm font-medium transition-colors" %>
          </div>
        </div>

        <!-- Menu utilisateur -->
        <div class="flex items-center space-x-4">
          <% if user_signed_in? %>
            <div class="flex items-center space-x-4">
              <span class="text-sm text-gray-600 hidden sm:block">
                Bienvenue, <span class="font-medium text-gray-900"><%= current_user.name %></span>
              </span>
              
              <% if current_user.admin? %>
                <%= link_to "Gérer les événements", events_path, class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md text-sm font-medium transition-colors" %>
              <% end %>
              
              <%= button_to "Se déconnecter", destroy_user_session_path, method: :delete, 
                    class: "text-gray-600 hover:text-gray-900 px-3 py-2 rounded-md text-sm font-medium transition-colors border-0 bg-transparent cursor-pointer" %>
            </div>
          <% else %>
            <div class="flex items-center space-x-2">
              <%= link_to "Se connecter", new_user_session_path, 
                    class: "text-gray-600 hover:text-gray-900 px-3 py-2 rounded-md text-sm font-medium transition-colors" %>
              <%= link_to "S'inscrire", new_user_registration_path, 
                    class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md text-sm font-medium transition-colors" %>
            </div>
          <% end %>
        </div>
      </div>
    </nav>
  </header>

  <!-- Messages flash modernisés -->
  <% if notice.present? %>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-4">
      <div class="bg-green-50 border border-green-200 rounded-md p-4">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-green-400" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-3">
            <p class="text-sm font-medium text-green-800"><%= notice %></p>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <% if alert.present? %>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-4">
      <div class="bg-red-50 border border-red-200 rounded-md p-4">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-3">
            <p class="text-sm font-medium text-red-800"><%= alert %></p>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Contenu principal -->
  <main class="max-w-7xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
    <%= yield %>
  </main>
</body>
</html>
