<!DOCTYPE html>
<html>
  <head>
    <title>Ludistiq</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="min-h-screen bg-white font-sans">
    <%= render 'layouts/flash' %>
    <!-- Header moderne avec design system -->
    <header class="bg-white shadow-sm border-b border-slate-200">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between h-16">
          <!-- Logo/Brand -->
          <div class="flex-shrink-0">
            <%= link_to root_path, class: "text-2xl font-bold text-slate-900 hover:text-indigo-600 transition-colors focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" do %>
              Ludistiq
            <% end %>
          </div>
          
          <!-- Navigation principale -->
          <nav class="hidden md:block">
            <div class="flex items-center space-x-1">
              <%= link_to "Accueil", root_path, class: "inline-flex items-center px-3 py-2 rounded-md text-sm font-medium text-slate-600 hover:text-slate-900 hover:bg-slate-50 transition-colors focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
            </div>
          </nav>

          <!-- Actions utilisateur -->
          <div class="flex items-center space-x-3">
            <% if user_signed_in? %>
              <!-- Utilisateur connecté -->
              <div class="flex items-center space-x-3">
                <!-- Salutation utilisateur -->
                <div class="hidden sm:flex items-center space-x-2">
                  <span class="text-sm text-slate-600">Bonjour,</span>
                  <span class="text-sm font-semibold text-slate-900"><%= current_user.name %></span>
                </div>
                
                <!-- Bouton admin si applicable -->
                <% if current_user.admin? %>
                  <%= render(ButtonComponent.new(path: events_path, style: :primary)) do %>
                    Gérer les événements
                  <% end %>
                <% end %>
                
                <!-- Bouton déconnexion -->
                <%= render(ButtonComponent.new(
                      path: destroy_user_session_path,
                      style: :secondary,
                      data: { turbo_method: :delete }
                    )) do %>
                  Se déconnecter
                <% end %>
              </div>
            <% else %>
              <!-- Utilisateur non connecté -->
              <div class="flex items-center space-x-2">
                <%= render(ButtonComponent.new(path: new_user_session_path, style: :secondary)) do %>
                  Se connecter
                <% end %>
                <%= render(ButtonComponent.new(path: new_user_registration_path, style: :primary)) do %>
                  S'inscrire
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </header>

    <!-- Contenu principal -->
    <main class="container mx-auto px-4 sm:px-6 lg:px-8 py-6">
      <%= yield %>
    </main>
  </body>
</html>
