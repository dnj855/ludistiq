<% content_for :title, "Modifier #{@zone.name} - #{@event.title}" %>

<div class="w-full max-w-2xl mx-auto">
  <!-- Header -->
  <div class="mb-8">
    <div class="flex items-center space-x-2 text-sm text-gray-500 mb-4">
      <%= link_to "Événements", events_path, class: "hover:text-gray-700" %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
      </svg>
      <%= link_to @event.title, @event, class: "hover:text-gray-700" %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
      </svg>
      <%= link_to "Zones", event_zones_path(@event), class: "hover:text-gray-700" %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
      </svg>
      <span class="text-gray-900">Modifier <%= @zone.name %></span>
    </div>
    
    <div class="flex items-center space-x-3">
      <div class="flex-shrink-0">
        <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center">
          <svg class="w-7 h-7 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
        </div>
      </div>
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Modifier "<%= @zone.name %>"</h1>
        <p class="text-sm text-gray-600">Modifiez les informations de cette zone</p>
      </div>
    </div>
  </div>

  <!-- Formulaire dans une carte -->
  <div class="bg-white shadow-sm rounded-lg border border-gray-200">
    <div class="px-6 py-8">
      <%= render 'form', zone: @zone %>
    </div>
  </div>

  <!-- Actions supplémentaires -->
  <div class="mt-6 flex justify-center">
    <%= button_to "Supprimer cette zone", event_zone_path(@event, @zone), 
          method: :delete,
          class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition-colors", 
          data: { turbo_confirm: "Êtes-vous sûr de vouloir supprimer cette zone ? Cette action est irréversible." } %>
  </div>
</div> 