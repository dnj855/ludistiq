<% content_for :title, "Missions - #{@zone.name}" %>

<div class="w-full">
  <!-- Header avec titre et action -->
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
    <div>
      <div class="flex items-center space-x-2 text-sm text-gray-500 mb-2">
        <%= link_to "Événements", events_path, class: "hover:text-gray-700" %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
        <%= link_to @event.title, @event, class: "hover:text-gray-700" %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
        <%= link_to "Zones", event_zones_path(@event), class: "hover:text-gray-700" %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
        <span class="text-gray-900">Missions - <%= @zone.name %></span>
      </div>
      <h1 class="text-3xl font-bold text-gray-900">Missions</h1>
      <p class="mt-2 text-sm text-gray-600">Gérez les missions de la zone <%= @zone.name %></p>
    </div>
    <%= render(ButtonComponent.new(path: new_event_zone_mission_path(@event, @zone), style: :primary)) do %>
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
      </svg>
      Nouvelle mission
    <% end %>
  </div>

  <!-- Liste des missions -->
  <div class="mt-8">
    <% if @missions.any? %>
      <div class="bg-white shadow-sm rounded-lg border border-gray-200 overflow-hidden">
        <div class="divide-y divide-gray-200">
          <% @missions.each do |mission| %>
            <div class="p-6 hover:bg-gray-50 transition-colors">
              <div class="flex items-center justify-between">
                <div class="flex items-center space-x-4">
                  <div class="flex-shrink-0">
                    <div class="w-10 h-10 bg-purple-100 rounded-lg flex items-center justify-center">
                      <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                      </svg>
                    </div>
                  </div>
                  <div class="flex-1 min-w-0">
                    <h3 class="text-lg font-medium text-gray-900">
                      <%= link_to mission.name, event_zone_mission_path(@event, @zone, mission), 
                            class: "hover:text-blue-600 transition-colors" %>
                    </h3>
                    <% if mission.description.present? %>
                      <p class="text-sm text-gray-600 mt-1">
                        <%= truncate(mission.description, length: 100) %>
                      </p>
                    <% end %>
                    <div class="flex items-center space-x-4 mt-2 text-xs text-gray-500">
                      <% if mission.start_time.present? %>
                        <span class="flex items-center">
                          <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                          </svg>
                          <%= mission.start_time.strftime("%H:%M") %>
                        </span>
                      <% end %>
                      <% if mission.end_time.present? %>
                        <span class="flex items-center">
                          <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                          </svg>
                          <%= mission.end_time.strftime("%H:%M") %>
                        </span>
                      <% end %>
                      <span>
                        <%= pluralize(mission.assignments.count, 'participant') %>
                      </span>
                    </div>
                  </div>
                </div>
                <div class="flex items-center space-x-2">
                  <%= render(ButtonComponent.new(path: event_zone_mission_path(@event, @zone, mission), style: :secondary)) do %>
                    Voir
                  <% end %>
                  <%= render(ButtonComponent.new(path: edit_event_zone_mission_path(@event, @zone, mission), style: :secondary)) do %>
                    Modifier
                  <% end %>
                  <%= render(ButtonComponent.new(
                        path: event_zone_mission_path(@event, @zone, mission),
                        style: :destructive,
                        data: { turbo_method: :delete, turbo_confirm: "Êtes-vous sûr de vouloir supprimer cette mission ?" }
                      )) do %>
                    Supprimer
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% else %>
      <!-- État vide -->
      <div class="text-center py-12">
        <div class="mx-auto w-24 h-24 bg-gray-100 rounded-full flex items-center justify-center">
          <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <h3 class="mt-6 text-lg font-medium text-gray-900">Aucune mission</h3>
        <p class="mt-2 text-sm text-gray-500">Commencez par créer votre première mission pour cette zone.</p>
        <div class="mt-6">
          <%= render(ButtonComponent.new(path: new_event_zone_mission_path(@event, @zone), style: :primary)) do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            Créer une mission
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Actions supplémentaires -->
  <div class="mt-8 pt-6 border-t border-gray-200">
    <div class="flex space-x-3">
      <%= render(ButtonComponent.new(path: event_zones_path(@event), style: :secondary)) do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
        </svg>
        Retour aux zones
      <% end %>
    </div>
  </div>
</div> 