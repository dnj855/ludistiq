<%# app/views/games/new.html.erb %>
<!-- En-tête -->
<div class="mb-8">
  <div class="flex items-center space-x-4 mb-4">
    <div class="flex-shrink-0">
      <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center">
        <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        </svg>
      </div>
    </div>
    <div class="flex-1 min-w-0">
      <h1 class="text-3xl font-bold text-gray-900">Ajouter un jeu</h1>
      <p class="text-lg text-gray-600">Ludothèque de "<%= @event.title %>"</p>
    </div>
  </div>

  <!-- Navigation -->
  <div class="flex justify-start">
    <%= link_to event_games_path(@event), class: "inline-flex items-center text-sm font-medium text-blue-600 hover:text-blue-500 transition-colors" do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
      </svg>
      Retour à la ludothèque
    <% end %>
  </div>
</div>

<!-- Formulaire -->
<div class="max-w-4xl mx-auto">
  <%= turbo_frame_tag "bgg_search" do %>
    <%= render 'form', game: @game, results: [] %>
  <% end %>
</div>