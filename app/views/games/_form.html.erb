<%# app/views/games/_form.html.erb %>

<!-- Recherche BoardGameGeek (seulement pour les nouveaux jeux) -->
<% if game.title.blank? %>
  <div class="mb-8 p-6 bg-blue-50 border border-blue-200 rounded-lg">
    <div class="flex items-center mb-4">
      <svg class="w-6 h-6 text-blue-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
      </svg>
      <h3 class="text-lg font-medium text-blue-900">Recherche BoardGameGeek</h3>
    </div>
    <p class="text-sm text-blue-700 mb-4">
      Recherchez votre jeu dans la base de données BoardGameGeek pour importer automatiquement ses informations.
    </p>
    
    <%= form_with(url: bgg_search_event_games_path(@event), method: :post, data: { controller: "bgg-search", action: "keyup->bgg-search#search" }, class: "space-y-4") do |f| %>
      <%= text_field_tag :query, nil, 
            placeholder: "Tapez le nom du jeu à rechercher...", 
            class: "block w-full px-4 py-3 border border-blue-300 rounded-md shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500 sm:text-sm placeholder-blue-400" %>
    <% end %>

    <div id="bgg_search_results" class="mt-4"></div>
  </div>

  <div class="relative">
    <div class="absolute inset-0 flex items-center">
      <div class="w-full border-t border-gray-300" />
    </div>
    <div class="relative flex justify-center text-sm">
      <span class="px-4 bg-gray-50 text-gray-500 font-medium">ou remplissez manuellement</span>
    </div>
  </div>
<% end %>

<!-- Formulaire principal -->
<div class="mt-8">
  <%= form_with model: [@event, game], data: { 'turbo-frame': '_top' }, class: "space-y-6" do |f| %>
    <!-- Messages d'erreur -->
    <% if f.object.errors.any? %>
      <div class="mb-4 p-3 bg-rose-100 text-rose-800 rounded-lg">
        <h2 class="font-bold"><%= pluralize(f.object.errors.count, "erreur") %> :</h2>
        <ul>
          <% f.object.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <!-- Informations de base -->
    <div class="bg-white border border-gray-200 rounded-lg p-6">
      <h3 class="text-lg font-medium text-gray-900 mb-4 flex items-center">
        <svg class="w-5 h-5 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        Informations générales
      </h3>
      
      <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
        <!-- Titre -->
        <div class="sm:col-span-2">
          <%= render(TextFieldComponent.new(
                form: f, 
                method: :title, 
                label: "Titre du jeu *",
                placeholder: "Ex: Catan, Azul, Wingspan...",
                required: true
              )) %>
          <% if f.object.errors.has_key?(:title) %>
            <p class="mt-2 text-sm text-red-600">
              <%= f.object.errors.full_messages_for(:title).to_sentence %>
            </p>
          <% end %>
        </div>

        <!-- Durée -->
        <div>
          <%= f.label :duration, "Durée (en minutes)", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.number_field :duration, 
                class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-green-500 focus:border-green-500 sm:text-sm transition-colors",
                placeholder: "Ex: 60",
                min: 1 %>
          <p class="mt-1 text-sm text-gray-500">Durée approximative d'une partie</p>
          <% if f.object.errors.has_key?(:duration) %>
            <p class="mt-2 text-sm text-red-600">
              <%= f.object.errors.full_messages_for(:duration).to_sentence %>
            </p>
          <% end %>
        </div>

        <!-- Nombre de joueurs -->
        <div class="grid grid-cols-2 gap-3">
          <div>
            <%= f.label :min_players, "Min joueurs", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.number_field :min_players, 
                  class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-green-500 focus:border-green-500 sm:text-sm transition-colors",
                  placeholder: "2",
                  min: 1 %>
            <% if f.object.errors.has_key?(:min_players) %>
              <p class="mt-2 text-sm text-red-600">
                <%= f.object.errors.full_messages_for(:min_players).to_sentence %>
              </p>
            <% end %>
          </div>
          <div>
            <%= f.label :max_players, "Max joueurs", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.number_field :max_players, 
                  class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-green-500 focus:border-green-500 sm:text-sm transition-colors",
                  placeholder: "4",
                  min: 1 %>
            <% if f.object.errors.has_key?(:max_players) %>
              <p class="mt-2 text-sm text-red-600">
                <%= f.object.errors.full_messages_for(:max_players).to_sentence %>
              </p>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Description -->
      <div class="mt-6">
        <%= f.label :description, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.text_area :description, 
              rows: 4,
              class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-green-500 focus:border-green-500 sm:text-sm transition-colors resize-y",
              placeholder: "Décrivez brièvement le jeu, ses mécaniques, son thème..." %>
        <p class="mt-1 text-sm text-gray-500">Description optionnelle du jeu</p>
        <% if f.object.errors.has_key?(:description) %>
          <p class="mt-2 text-sm text-red-600">
            <%= f.object.errors.full_messages_for(:description).to_sentence %>
          </p>
        <% end %>
      </div>
    </div>

    <!-- Informations de gestion -->
    <div class="bg-white border border-gray-200 rounded-lg p-6">
      <h3 class="text-lg font-medium text-gray-900 mb-4 flex items-center">
        <svg class="w-5 h-5 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
        </svg>
        Gestion interne
      </h3>
      
      <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
        <!-- Propriétaire -->
        <div>
          <%= render(TextFieldComponent.new(
                form: f, 
                method: :owner, 
                label: "Propriétaire",
                placeholder: "Nom du propriétaire"
              )) %>
          <p class="mt-1 text-sm text-gray-500">Qui possède ce jeu ?</p>
          <% if f.object.errors.has_key?(:owner) %>
            <p class="mt-2 text-sm text-red-600">
              <%= f.object.errors.full_messages_for(:owner).to_sentence %>
            </p>
          <% end %>
        </div>

        <!-- Nombre d'exemplaires -->
        <div>
          <%= f.label :copies_count, "Nombre d'exemplaires", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.number_field :copies_count, 
                class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-green-500 focus:border-green-500 sm:text-sm transition-colors",
                placeholder: "1",
                min: 1,
                value: f.object.copies_count || 1 %>
          <p class="mt-1 text-sm text-gray-500">Combien d'exemplaires disponibles ?</p>
          <% if f.object.errors.has_key?(:copies_count) %>
            <p class="mt-2 text-sm text-red-600">
              <%= f.object.errors.full_messages_for(:copies_count).to_sentence %>
            </p>
          <% end %>
        </div>
      </div>

      <!-- Zone d'installation -->
      <div class="sm:col-span-2">
        <%= f.label :zone_id, "Zone d'installation", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.collection_select :zone_id, 
              @event.zones.order(:name), 
              :id, 
              :name,
              { prompt: "Sélectionnez une zone (optionnel)" },
              { class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-green-500 focus:border-green-500 sm:text-sm transition-colors" } %>
        <p class="mt-1 text-sm text-gray-500">Dans quelle zone ce jeu sera-t-il installé ?</p>
        <% if f.object.errors.has_key?(:zone_id) %>
          <p class="mt-2 text-sm text-red-600">
            <%= f.object.errors.full_messages_for(:zone_id).to_sentence %>
          </p>
        <% end %>
      </div>
    </div>

    <!-- Champs cachés -->
    <%= f.hidden_field :bgg_id %>
    <%= f.hidden_field :image_url %>

    <!-- Actions -->
    <div class="flex flex-col sm:flex-row space-y-3 sm:space-y-0 sm:space-x-3 pt-6">
      <%= f.submit "Enregistrer le jeu", 
            class: "w-full sm:w-auto inline-flex justify-center items-center px-6 py-3 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 disabled:opacity-50 disabled:cursor-not-allowed transition-colors" %>
    </div>
  <% end %>
</div>