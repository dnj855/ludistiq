<%# frozen_string_literal: true %>

<!-- En-tête de la ludothèque -->
<div class="mb-8">
  <div class="flex items-center space-x-4 mb-4">
    <div class="flex-shrink-0">
      <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center">
        <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
        </svg>
      </div>
    </div>
    <div class="flex-1 min-w-0">
      <h1 class="text-3xl font-bold text-gray-900">Ludothèque</h1>
      <p class="text-lg text-gray-600">"<%= @event.title %>"</p>
    </div>
  </div>

  <!-- Navigation -->
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
    <div class="mb-4 sm:mb-0">
      <%= link_to event_path(@event), class: "inline-flex items-center text-sm font-medium text-blue-600 hover:text-blue-500 transition-colors" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
        </svg>
        Retour à l'événement
      <% end %>
    </div>
    
    <%= render(ButtonComponent.new(path: new_event_game_path(@event), style: :primary)) do %>
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
      </svg>
      Ajouter un jeu
    <% end %>
  </div>
</div>

<!-- Liste des jeux -->
<div>
  <% if @games.any? %>
    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4">
      <% @games.each do |game| %>
        <div class="bg-white overflow-hidden shadow-sm rounded-lg border border-gray-200 hover:shadow-md transition-shadow">
          <% if game.image_url.present? %>
            <div class="aspect-w-3 aspect-h-2">
              <img src="<%= game.image_url %>" alt="<%= game.title %>" class="w-full h-48 object-cover">
            </div>
          <% else %>
            <div class="h-48 bg-gray-100 flex items-center justify-center">
              <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
              </svg>
            </div>
          <% end %>
          
          <div class="p-4">
            <h3 class="text-lg font-medium text-gray-900 truncate mb-2">
              <%= game.title %>
            </h3>
            
            <div class="space-y-2 text-sm text-gray-600">
              <% if game.min_players && game.max_players %>
                <div class="flex items-center">
                  <svg class="w-4 h-4 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                  </svg>
                  <%= game.min_players == game.max_players ? "#{game.min_players} joueur#{'s' if game.min_players > 1}" : "#{game.min_players}-#{game.max_players} joueurs" %>
                </div>
              <% end %>
              
              <% if game.duration %>
                <div class="flex items-center">
                  <svg class="w-4 h-4 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  <%= game.duration %> min
                </div>
              <% end %>
              
              <% if game.owner.present? %>
                <div class="flex items-center">
                  <svg class="w-4 h-4 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                  </svg>
                  Propriétaire: <%= game.owner %>
                </div>
              <% end %>
              
              <% if game.copies_count && game.copies_count > 1 %>
                <div class="flex items-center">
                  <svg class="w-4 h-4 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
                  </svg>
                  <%= game.copies_count %> exemplaires
                </div>
              <% end %>
            </div>
            
            <% if game.description.present? %>
              <p class="mt-3 text-sm text-gray-600 line-clamp-2">
                <%= truncate(game.description, length: 80) %>
              </p>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <!-- État vide -->
    <div class="text-center py-12">
      <div class="mx-auto w-24 h-24 bg-gray-100 rounded-full flex items-center justify-center">
        <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
        </svg>
      </div>
      <h3 class="mt-6 text-lg font-medium text-gray-900">Aucun jeu dans la ludothèque</h3>
      <p class="mt-2 text-sm text-gray-500">Commencez par ajouter des jeux à la ludothèque de cet événement.</p>
      <div class="mt-6">
        <%= render(ButtonComponent.new(path: new_event_game_path(@event), style: :primary)) do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
          </svg>
          Ajouter votre premier jeu
        <% end %>
      </div>
    </div>
  <% end %>
</div>