<div id="<%= dom_id event %>" class="bg-white rounded-xl shadow-sm ring-1 ring-inset ring-slate-200 p-6 hover:shadow-md transition-shadow">
  <!-- En-tête avec icône -->
  <div class="flex items-start space-x-4 mb-6">
    <div class="flex-shrink-0">
      <div class="w-10 h-10 bg-indigo-100 rounded-lg flex items-center justify-center">
        <svg class="w-6 h-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
        </svg>
      </div>
    </div>
    <div class="flex-1 min-w-0">
      <h3 class="text-lg font-semibold text-slate-900 truncate">
        <%= event.title %>
      </h3>
      <div class="flex items-center text-sm text-slate-600 mt-1">
        <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <time datetime="<%= event.start_date %>">
          <%= l event.start_date, format: :short %> - <%= l event.end_date, format: :short %>
        </time>
      </div>
    </div>
  </div>

  <!-- Description -->
  <% if event.description.present? %>
    <div class="prose max-w-none text-slate-700 text-sm">
      <%= simple_format(truncate(event.description, length: 200)) %>
    </div>
  <% end %>
</div>
