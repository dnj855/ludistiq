<%# app/views/events/participants.html.erb %>
<div class="max-w-6xl mx-auto">
  <!-- En-tête avec navigation -->
  <div class="mb-8">
    <div class="flex items-center space-x-4 mb-4">
      <div class="flex-shrink-0">
        <div class="w-12 h-12 bg-indigo-100 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
          </svg>
        </div>
      </div>
      <div class="flex-1 min-w-0">
        <h1 class="text-3xl font-bold text-slate-900">Gestion des participants</h1>
        <p class="text-lg text-slate-600">"<%= @event.title %>"</p>
      </div>
    </div>

    <div class="flex justify-start">
      <%= link_to event_path(@event), class: "inline-flex items-center text-sm font-medium text-slate-600 hover:text-indigo-600 transition-colors" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
        </svg>
        Retour à l'événement
      <% end %>
    </div>
  </div>

  <!-- Tableau des participants -->
  <div class="bg-white shadow-sm rounded-xl ring-1 ring-inset ring-slate-200 overflow-hidden">
    <div class="px-6 py-4 border-b border-slate-200 bg-slate-50">
      <h3 class="text-lg font-semibold text-slate-900">
        Participants inscrits
        <span class="ml-2 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-indigo-100 text-indigo-800">
          <%= @event.participations.count %>
        </span>
      </h3>
      <p class="mt-1 text-sm text-slate-600">
        Gérez les rôles et permissions des participants à cet événement.
      </p>
    </div>

    <% if @event.participations.any? %>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-slate-200">
          <thead class="bg-slate-50">
            <tr>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-slate-600 uppercase tracking-wider">
                Participant
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-slate-600 uppercase tracking-wider">
                Rôle actuel
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-slate-600 uppercase tracking-wider">
                Actions
              </th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-slate-200">
            <% @event.participations.includes(:user).each do |participation| %>
              <tr class="hover:bg-slate-50 transition-colors">
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="flex items-center">
                    <div class="flex-shrink-0 h-10 w-10">
                      <div class="h-10 w-10 rounded-full bg-slate-200 flex items-center justify-center">
                        <svg class="h-5 w-5 text-slate-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                        </svg>
                      </div>
                    </div>
                    <div class="ml-4">
                      <div class="text-sm font-medium text-slate-900">
                        <%= participation.user.name %>
                      </div>
                      <div class="text-sm text-slate-600">
                        <%= participation.user.email %>
                      </div>
                    </div>
                  </div>
                </td>

                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= participation.admin? ? 'bg-rose-100 text-rose-800' : 'bg-emerald-100 text-emerald-800' %>">
                    <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                      <% if participation.admin? %>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                      <% else %>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                      <% end %>
                    </svg>
                    <%= participation.role.humanize %>
                  </span>
                </td>

                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                  <%= form_with(model: participation, url: participation_path(participation), method: :patch, local: true, class: "flex items-center space-x-3") do |form| %>
                    <div class="flex items-center space-x-2">
                      <%= form.select :role, 
                            Participation.roles.keys.map { |r| [r.humanize, r] }, 
                            { selected: participation.role },
                            { class: "block w-full pl-3 pr-10 py-1.5 text-sm rounded-md ring-1 ring-inset ring-slate-300 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" } %>
                      
                      <%= form.submit "Mettre à jour", 
                            class: "inline-flex items-center rounded-md px-3 py-1.5 text-xs font-semibold text-white bg-indigo-600 shadow-sm transition-colors hover:bg-indigo-700 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
                    </div>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <!-- État vide -->
      <div class="text-center py-12">
        <div class="mx-auto w-16 h-16 bg-slate-100 rounded-full flex items-center justify-center">
          <svg class="w-8 h-8 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
          </svg>
        </div>
        <h3 class="mt-4 text-lg font-semibold text-slate-900">Aucun participant</h3>
        <p class="mt-2 text-sm text-slate-600">
          Aucun participant n'est encore inscrit à cet événement.
        </p>
      </div>
    <% end %>
  </div>

  <!-- Action de retour -->
  <div class="mt-6 flex justify-start">
    <%= link_to @event, class: "inline-flex items-center rounded-md bg-white px-4 py-2 text-sm font-medium text-slate-700 shadow-sm ring-1 ring-inset ring-slate-300 transition-colors hover:bg-slate-50 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
      </svg>
      Retour à l'événement
    <% end %>
  </div>
</div>