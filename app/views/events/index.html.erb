<% content_for :title, "Events" %>

<div class="w-full">
  <!-- Header avec titre et action -->
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
    <div>
      <h1 class="text-3xl font-bold text-slate-900">Événements</h1>
      <p class="mt-2 text-sm text-slate-600">Gérez et organisez vos événements ludiques</p>
    </div>
    <%= link_to new_event_path, class: "mt-4 sm:mt-0 inline-flex items-center justify-center rounded-md px-4 py-2 text-sm font-semibold text-white bg-indigo-600 shadow-sm transition-colors hover:bg-indigo-700 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" do %>
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
      </svg>
      Nouvel événement
    <% end %>
  </div>

  <!-- Liste des événements -->
  <div class="mt-8">
    <% if @events.any? %>
      <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
        <% @events.each do |event| %>
          <div class="bg-white overflow-hidden shadow-sm rounded-xl ring-1 ring-inset ring-slate-200 hover:shadow-md transition-shadow">
            <div class="p-6">
              <!-- Titre de l'événement -->
              <div class="flex items-center">
                <div class="flex-shrink-0">
                  <div class="w-10 h-10 bg-indigo-100 rounded-lg flex items-center justify-center">
                    <svg class="w-6 h-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                    </svg>
                  </div>
                </div>
                <div class="ml-4 flex-1">
                  <h3 class="text-lg font-semibold text-slate-900 truncate">
                    <%= event.title %>
                  </h3>
                  <p class="text-sm text-slate-600">
                    <time datetime="<%= event.start_date %>">
                      <%= l event.start_date, format: :short %> - <%= l event.end_date, format: :short %>
                    </time>
                  </p>
                </div>
              </div>

              <!-- Description -->
              <div class="mt-4">
                <p class="text-sm text-slate-600 line-clamp-3">
                  <%= truncate(event.description, length: 120) %>
                </p>
              </div>

              <!-- Actions -->
              <div class="mt-6 flex flex-col space-y-2 sm:flex-row sm:space-y-0 sm:space-x-2">
                <%= link_to "Voir", event, class: "inline-flex items-center justify-center rounded-md bg-white px-3 py-2 text-sm font-medium text-slate-700 shadow-sm ring-1 ring-inset ring-slate-300 transition-colors hover:bg-slate-50 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
                <%= link_to "Modifier", edit_event_path(event), class: "inline-flex items-center justify-center rounded-md bg-white px-3 py-2 text-sm font-medium text-slate-700 shadow-sm ring-1 ring-inset ring-slate-300 transition-colors hover:bg-slate-50 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
                <%= button_to "Supprimer", event, method: :delete, 
                      class: "inline-flex items-center justify-center rounded-md px-3 py-2 text-sm font-medium text-white bg-rose-600 shadow-sm transition-colors hover:bg-rose-700 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-rose-600", 
                      data: { turbo_confirm: "Êtes-vous sûr de vouloir supprimer cet événement ?" } %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <!-- État vide -->
      <div class="text-center py-12">
        <div class="mx-auto w-24 h-24 bg-slate-100 rounded-full flex items-center justify-center">
          <svg class="w-12 h-12 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
        </div>
        <h3 class="mt-6 text-lg font-semibold text-slate-900">Aucun événement</h3>
        <p class="mt-2 text-sm text-slate-600">Commencez par créer votre premier événement ludique.</p>
        <div class="mt-6">
          <%= link_to new_event_path, class: "inline-flex items-center rounded-md px-4 py-2 text-sm font-semibold text-white bg-indigo-600 shadow-sm transition-colors hover:bg-indigo-700 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            Créer un événement
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
